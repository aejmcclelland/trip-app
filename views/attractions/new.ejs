<% layout('/layouts/boilerplate')%>

  <% if(currentUser){%>
    <div class="container d-flex justify-content-center mx-auto">
      <div class="col-xs-6 col-md-6 offset-md-4 col-xl-6 offset-xl-4 mx-auto">
          <div class="card-body rounded-3 shadow p-3">
              <h4 class="card-title text-center">Add a new tourist attraction</h4>
    <form action="/attractions" method="POST" class="row g-3">

      <div class="row mb-1 g-1">
        <label for="place">Attraction</label>
        <input type="text" id="place" name="attractions[place]">
      </div>
      <div class="row mb-1 g-1">
        <label for="category">Category</label>
        <input type="text" id="category" name="attractions[category]">
      </div>
      <div class="row mb-1 g-1">
        <label for="description">Description</label>
        <input type="text" id="description" name="attractions[description]">
      </div>
      <div class="row mb-1 g-1">
        <label for="address">Address</label>
        <input type="text" id="address" name="attractions[address]">
      </div>
      <div class="row mb-1 g-1">
        <label for="post_code">Post Code</label>
        <input type="text" id="post_code" name="attractions[post_code]">
      </div>
      <div class="row mb-1 g-1">
        <label for="city">City</label>
        <input type="text" id="city" name="attractions[city]">
      </div>
      <div class="row mb-1 g-1">
        <label for="opening_time">Opening time</label>
        <input type="text" id="opening_time" name="attractions[opening_time]">
      </div>
      <div class="row mb-1 g-1">
        <label for="closing_time">Closing time</label>
        <input type="text" id="closing_time" name="attractions[closing_time]">
      </div>
      <div class="row mb-1 g-1">
        <label for="last_entry">Last Entry</label>
        <input type="text" id="last_entry" name="attractions[last_entry]">
      </div>
      <div class="row mb-1 g-1">
        <label for="adult_ticket">Adult Ticket Price</label>
        <input type="text" id="adult_ticket" name="attractions[adult_ticket]">
      </div>
      <div class="row mb-1 g-1">
        <label for="child_ticket">Child Ticket Price</label>
        <input type="text" id="child_ticket" name="attractions[child_ticket]">
      </div>
      <div class="row mb-1 g-2">
        <label for="visit_duration">Reccomended Visit Duration</label>
        <input type="text" id="visit_duration" name="attractions[visit_duration]">
      </div>
      <div class="row mb-1 g-1">
        <label for="restaurant">Restaurant</label>
        <input type="text" id="restaurant" name="attractions[restaurant]">
      </div>
      <div class="row mb-1 g-1">
        <label for="imgUrl">Image URL</label>
        <input type="text" id="imgUrl" name="attractions[imgUrl]">
      </div>

      <button>Add Attraction</button>
    </form>
  </div>
</div>
</div>
    <% } else{%>
      <div class="container py-5 mh-100 w-75 ">
        <div class="row justify-content-center align-items-center mh-100">
        <div class="col-md-6 col-md-offset-4 border border-info border-2 shadow mb-5 p-4 bg-body rounded">
        <p>Log in to view this page.</p>
    <a href="/login?returnTo=/attractions">Login</a>
    </div>
    </div>
    <% } %>
    
   



